{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CherryStudio Local",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "CherryStudio Local",
        "width": 1280,
        "height": 800,
        "fullscreen": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; media-src * data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src *"
    },
    "bundle": {
      "active": true,
      "identifier": "studio.local.cherry",
      "targets": "all"
    },
    "allowlist": {
      "shell": {
        "all": false,
        "execute": false,
        "sidecar": false,
        "open": true
      },
      "fs": {
        "scope": ["$APP/**"]
      },
      "http": {
        "scope": ["https://**", "http://localhost:5173"]
      }
    }
  }
}

